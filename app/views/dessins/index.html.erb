<div class="container">
  <div class="top mt-5">
    <br>
    <div class="title">
      <h1 class="mt-5 text-uppercase">Portfolio</h1>
    </div>
    <div class="button d-flex justify-content-end">
      <button class="btn btn-outline-primary">
        <%= link_to "Create new manga", new_dessin_path(@new_dessin), class:"text-decoration-none text-white" %>
      </button>
    </div>
  </div>
<br>
  <div class="cards">
    <div class="row d-flex flex-row">
        <% @dessins.each do |dessin| %>
       <div class="col-md-6 col-lg-4 mb-2">
        <%= cl_image_tag(dessin.image.key, width:"300px") %>
        <%= link_to dessin.name, dessin_path(dessin), class: "d-flex justify-content-center text-decoration-none" %>
       </div>
        <% end %>
    </div>
  </div>
</div>
