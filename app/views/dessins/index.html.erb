<div class="container">
  <div class="top mt-5">
    <br>
    <div class="title">
      <h1 class="mt-5 text-uppercase">Portfolio</h1>
    </div>
    <div class="button d-flex justify-content-end">
      <button class="btn btn-outline-primary">
        <%= link_to "Create new manga", new_dessin_path(@new_dessin), class:"text-decoration-none text-white" %>
      </button>
    </div>
  </div>
<br>
  <div class="card">
    <div class="row">
      <% @dessins.each do |dessin| %>
       <div class="col-md-6 col-lg-4 mb-2">
        <%= cl_image_tag(dessin.image.key, width:"350px", height:"350px") %>
        <div class="card-trip-infos">
        <%= link_to dessin.name, dessin_path(dessin), class: "text-decoration-none" %>
        </div>
       </div>
        <% end %>
    </div>
  </div>
</div>
